<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Test</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <div class="container">
      <fieldset>
        <form action="/" method="post">
          <input name="city" type="text" class="ghost-input" placeholder="Enter a City" required>
          <input type="submit" class="ghost-button" value="Get Weather">
        </form>
        <div class="results">
            <% if(weather !== null){ %>
                <p ><%= weather %></p>
                <img src="<%= weatherIcon %>" width="100px" height="100px" alt="Weather icon"></img>
            <% } %>
            <% if(error !== null){ %>
                <p><%= error %></p>
            <% } %>
        </div>
        <hr>
        
        <div class="top-cities">
          <h2 >Top Cities</h2>
            <% if(cities !== null){ %>
              <% for(p of cities.list) { %>
                <p><span class="emphasis"><%= p.name %></span>: Currently is <span class="emphasis" ><%= p.main.temp %></span>&deg; F</p>
              <% } %>
            <% } %>
        </div>
          
      </fieldset>
    </div>
  </body>
</html>